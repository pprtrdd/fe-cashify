  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}